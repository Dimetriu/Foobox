.p-2.bd-highlight
  -# %ul.nav
  -#   %li.nav-item= link_to(t(".sign_in"), new_user_session_url, class: "nav-link", data: { remote: true, role: "sign-in" })
  -#   %li.nav-item= link_to(t(".download"), root_url, class: "nav-link disabled")
  = render "users/shared/header_links"
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }
      = f.input :password, required: false, input_html: { autocomplete: "current-password" }
      = f.input :remember_me, as: :boolean, class: "custom-control-input", id: "custom-check" if devise_mapping.rememberable?
    .form-actions
      = f.button :submit, "Sign In"
  = render "users/shared/links"
